<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".client.ClientOrdersActivity">

    <!-- TODO add menu -->

    <TextView
        android:id="@+id/recentOrdersLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/recent_orders"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="@color/blue"
        android:layout_alignParentStart="true"
        android:layout_marginStart="10dp" />

    <TextView
        android:id="@+id/emptyOrdersLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/empty_orders"
        android:layout_centerInParent="true" />

    <ListView
        android:id="@+id/ordersList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/recentOrdersLabel"
        android:dividerHeight="10dp"
        android:layout_centerInParent="true"
        android:layout_margin="20dp"
        android:scrollbarSize="1dp" />

</RelativeLayout>