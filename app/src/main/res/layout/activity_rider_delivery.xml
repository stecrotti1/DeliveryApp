<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".rider.RiderDeliveryActivity">

    <TextView
        android:id="@+id/dateDelivery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/delivery_date"
        android:textColor="@color/black"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/locationDelivery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/delivery_location"
        android:textColor="@color/black"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:textSize="15sp"
        android:layout_below="@id/dateDelivery" />

    <TextView
        android:id="@+id/deliveryTotalPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/delivery_total_payment"
        android:textColor="@color/black"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:textSize="15sp"
        android:layout_below="@id/locationDelivery" />

    <TextView
        android:id="@+id/deliveryPaymentType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/delivery_payment_type"
        android:textColor="@color/black"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:textSize="15sp"
        android:layout_below="@id/deliveryTotalPrice" />

    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/startDeliveryBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/start_delivery"
        app:icon="@drawable/notification_icon"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/deliveryPaymentType"
        android:layout_marginTop="20dp" />

    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/deliveryMap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/view_map_order"
        app:icon="@drawable/location"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/startDeliveryBtn"
        android:layout_marginTop="10dp" />

    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/riderChatClientBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/client"
        app:icon="@drawable/message"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_below="@id/deliveryMap"
        tools:ignore="RelativeOverlap" />

    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/riderChatManagerBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/manager"
        app:icon="@drawable/message"
        android:layout_below="@id/riderChatClientBtn"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        tools:ignore="RelativeOverlap" />

    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/endDeliverySuccessBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/delivery_success"
        android:textAlignment="center"
        app:icon="@drawable/notification_icon"
        android:layout_below="@id/riderChatManagerBtn"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true" />

    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/endDeliveryFailureBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/delivery_failure"
        app:icon="@drawable/notification_icon"
        android:textAlignment="center"
        android:layout_below="@id/endDeliverySuccessBtn"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true" />


</RelativeLayout>